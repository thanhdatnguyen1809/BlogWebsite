        <h1 class="">Blog</h1>
        <a class="btn btn-primary" href="/blog/create">Thêm mới</a>
        <% for(const blog of blogs) { %> 
        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title"><%= blog.title %></h4>
                <div class="card-subtitle text-muted"><%= blog.description %></div>
                <a class="btn btn-info mt-2" href="/blog/<%= blog._id %>">Chi tiết</a>
                <form method="POST" action="/blog/<%= blog._id %>?_method=DELETE" class="d-inline"><button type="submit" class="btn btn-danger mt-2">Xóa</button></form>
            </div>
        </div>
        <% } %> 
    </div>


    <%- include('./partials/script'); %>
